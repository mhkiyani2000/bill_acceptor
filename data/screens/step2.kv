BillAcceptorScreen:
    name: 'step2'

    GridLayout:
        rows: 3
        spacing: '50dp'
        size_hint: .5, None
        height: self.minimum_height

        Label:
            text: 'Insert your phone number'
            font_size: 40

        GridLayout:
            cols: 2
            spacing: '8dp'
            size_hint: .5, None
            height: self.minimum_height

            Label:
                text: app.phonenumber

            Button:
                size_hint_y: None
                height: '48dp'
                text: 'Enter >'
                on_release: app.go_next_screen()

        GridLayout:
            cols: 11
            spacing: '8dp'
            size_hint: .5, None
            height: self.minimum_height

            Button:
                size_hint_y: None
                height: '48dp'
                text: '1'
                on_release: app.add_phonenumber(1)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '2'
                on_release: app.add_phonenumber(2)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '3'
                on_release: app.add_phonenumber(3)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '4'
                on_release: app.add_phonenumber(4)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '5'
                on_release: app.add_phonenumber(5)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '6'
                on_release: app.add_phonenumber(6)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '7'
                on_release: app.add_phonenumber(7)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '8'
                on_release: app.add_phonenumber(8)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '9'
                on_release: app.add_phonenumber(19)

            Button:
                size_hint_y: None
                height: '48dp'
                text: '0'
                on_release: app.add_phonenumber(0)

            Button:
                spacing: '50dp'
                height: '48dp'
                text: '< Back'
                on_release: app.delete_phonenumber()
